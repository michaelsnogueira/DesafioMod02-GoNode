  <script src="https://code.jquery.com/jquery-3.3.1.min.js"></script>
  <script src="/main.js"></script>
</head>

<body>
  {% include 'partials/flash.njk' %}
  <div class="auth-wrapper">
    <h1>Docfy</h1>
