<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Docfy</title>

  <link rel="stylesheet" href="/styles.css">
  <script src="https://code.jquery.com/jquery-3.3.1.min.js"></script>
  <script src="/main.js"></script>

</head>
<body>
  {% include 'partials/flash.njk' %}
  <div class="wrapper">
    <header id="header">
      <div class="container">
        <h1>Docfy</h1>
        <div class="user-info">
          <p class="welcome">
            Bem vindo<br>
            <strong>{{ user }}</strong>
          </p>
          <a href="/signout" class="btn btn-danger">
            <img src="/signout.svg">
          </a>
        </div>
      </div>
    </header>

    <section id="main">
      <div class="container">
        <header>
          <h2>Meus projetos ({{ tamanho }})</h2>
          <div class="addon">
            <form action="/registerProject" method="POST">
              <input type="text" name="title" placeholder="Novo projeto">
              <button type="submit" class="btn">
                <img src="/plus.svg">
              </button>
            </form>
          </div>
        </header>

        <section id="content">
          <div class="project-list">
          {% for titulo in projetos %}
             <a href="/sessionProject/{{ titulo.id }}">{{ titulo.title }}</a>
         {% endfor %}
          </div>
        </section>
      </div>
    </section>
  </div>
</body>
</html>
